@model IEnumerable<KulturAtlasi.Models.Bildirim>

@{
    ViewData["Title"] = "Bildirimler";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold"><i class="bi bi-bell-fill text-primary"></i> Bildirimler</h3>

                @if (Model.Any())
                {
                    <form asp-action="TumunuSil" method="post" onsubmit="return confirm('Tüm bildirimleri silmek istediğine emin misin?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                            <i class="bi bi-trash"></i> Tümünü Temizle
                        </button>
                    </form>
                }
            </div>

            <div class="card shadow-sm border-0">
                <div class="list-group list-group-flush">
                    @if (Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            // İkona karar verelim
                            string ikon = "bi-info-circle";
                            string renk = "text-primary";
                            if (item.Tur == "Takip") { ikon = "bi-person-plus-fill"; renk = "text-success"; }
                            if (item.Tur == "Beğeni") { ikon = "bi-heart-fill"; renk = "text-danger"; }
                            if (item.Tur == "Yorum") { ikon = "bi-chat-dots-fill"; renk = "text-warning"; }

                            <div class="list-group-item list-group-item-action p-3 d-flex align-items-center justify-content-between">
                                <a href="@item.Link" class="d-flex align-items-center text-decoration-none text-dark w-100">

                                    <div class="fs-4 me-3 @renk">
                                        <i class="bi @ikon"></i>
                                    </div>

                                    <div>
                                        <p class="mb-0 fw-bold">@item.Mesaj</p>
                                        <small class="text-muted">@item.Tarih.ToString("dd MMMM HH:mm")</small>
                                    </div>
                                </a>

                                <form asp-action="Sil" asp-route-id="@item.BildirimID" method="post">
                                    <button type="submit" class="btn btn-sm text-muted hover-danger" title="Sil">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </form>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-bell-slash fs-1"></i>
                            <p class="mt-3">Henüz hiç bildirimin yok.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .hover-danger:hover {
        color: red !important;
    }
</style>