@model KulturAtlasi.Models.Film

@{
    ViewData["Title"] = "Filmi Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="card-header bg-warning text-dark py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-square"></i> Filmi Düzenle: @Model.Baslik</h5>
                </div>

                <div class="card-body p-0">
                    <form asp-action="Edit">
                        <div class="row g-0">

                            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-3 border-end">
                                <div class="text-center w-100">
                                    <h6 class="text-muted small mb-2">Poster Önizlemesi</h6>
                                    <img id="posterOnizleme"
                                         src="@(string.IsNullOrEmpty(Model.PosterYolu) ? "https://via.placeholder.com/300x450?text=Afiş+Yok" : Model.PosterYolu)"
                                         class="img-fluid rounded shadow-sm"
                                         style="max-height: 450px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/300x450?text=Kırık+Link'">
                                </div>
                            </div>

                            <div class="col-md-8 p-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <input type="hidden" asp-for="FilmID" />
                                <input type="hidden" asp-for="KayitTarihi" />
                                <input type="hidden" asp-for="KullaniciID" />

                                <div class="form-floating mb-3">
                                    <input asp-for="Baslik" class="form-control fw-bold" placeholder="Film Adı" />
                                    <label asp-for="Baslik">Film Adı</label>
                                    <span asp-validation-for="Baslik" class="text-danger"></span>
                                </div>

                                <div class="row g-2 mb-3">
                                    <div class="col-md-8">
                                        <div class="form-floating">
                                            <input asp-for="Yonetmen" class="form-control" placeholder="Yonetmen" />
                                            <label asp-for="Yonetmen">Yönetmen</label>
                                            <span asp-validation-for="Yonetmen" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-floating">
                                            <input asp-for="Yil" class="form-control" placeholder="Yıl" />
                                            <label asp-for="Yil">Yıl</label>
                                            <span asp-validation-for="Yil" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select asp-for="DurumID" class="form-select" asp-items="ViewBag.DurumID"></select>
                                            <label asp-for="DurumID">İzleme Durumu</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input asp-for="KullaniciPuani" type="number" min="1" max="5" class="form-control" placeholder="Puan" />
                                            <label asp-for="KullaniciPuani">Puanım (1-5)</label>
                                            <span asp-validation-for="KullaniciPuani" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="PosterYolu" class="form-control" placeholder="Poster URL" id="inputPosterUrl"
                                           oninput="resmiGuncelle(this.value)" />
                                    <label asp-for="PosterYolu">Poster Linki (URL)</label>
                                    <span asp-validation-for="PosterYolu" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-4">
                                    <textarea asp-for="Aciklama" class="form-control" placeholder="Özet" style="height: 120px"></textarea>
                                    <label asp-for="Aciklama">Özet / Notlar</label>
                                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary px-4">İptal</a>
                                    <button type="submit" class="btn btn-warning fw-bold px-4">
                                        <i class="bi bi-check-lg"></i> Değişiklikleri Kaydet
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Poster linki değiştiğinde resmi anlık güncelle
        function resmiGuncelle(url) {
            var img = document.getElementById('posterOnizleme');
            // Eğer kutu boşsa placeholder koy, doluysa linki koy
            img.src = url ? url : "https://via.placeholder.com/300x450?text=Afiş+Yok";
        }
    </script>
}