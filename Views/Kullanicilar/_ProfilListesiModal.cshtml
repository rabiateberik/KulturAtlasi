@model List<KulturAtlasi.Models.ListeOgesiViewModel>

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold">Listelenenler</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body p-0">
    @if (Model == null || !Model.Any())
    {
        <div class="text-center p-5 text-muted">
            <i class="bi bi-inbox fs-1 opacity-50"></i>
            <p class="mt-2">Burada gösterilecek bir şey yok.</p>
        </div>
    }
    else
    {
        <div class="list-group list-group-flush mt-2">
            @foreach (var item in Model)
            {
                <a href="@item.Link" class="list-group-item list-group-item-action d-flex align-items-center gap-3 py-3 border-0">
                    <img src="@(item.Resim ?? "https://placehold.co/50")" class="rounded-circle shadow-sm" width="50" height="50" style="object-fit:cover;">

                    <div class="flex-grow-1">
                        <h6 class="mb-0 fw-bold text-dark">@item.Baslik</h6>
                        <small class="text-muted">@item.AltBaslik</small>
                    </div>

                    <i class="bi bi-chevron-right text-muted small"></i>
                </a>
            }
        </div>
    }
</div>