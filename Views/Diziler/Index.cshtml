@model IEnumerable<KulturAtlasi.Models.Dizi>

@{
    ViewData["Title"] = "Dizi Arşivim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold"><i class="bi bi-tv"></i> Dizi Arşivim</h2>
    <a asp-action="Create" class="btn btn-warning text-dark fw-bold rounded-pill px-4">
        <i class="bi bi-plus-lg"></i> Yeni Dizi Ekle
    </a>
</div>

<div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 border-0 shadow-sm dizi-karti bg-dark text-white">
                <div class="position-relative" style="height: 350px; overflow: hidden; border-radius: 10px;">
                    @if (!string.IsNullOrEmpty(item.PosterYolu))
                    {
                        <img src="@item.PosterYolu" class="card-img-top h-100 w-100" style="object-fit: cover;">
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center h-100 bg-secondary">
                            <i class="bi bi-tv fs-1"></i>
                        </div>
                    }

                    @{
                        var renk = "bg-secondary";
                        if (item.Durum?.Ad == "Izledim") renk = "bg-success";
                        if (item.Durum?.Ad == "Izliyorum") renk = "bg-primary";
                        if (item.Durum?.Ad == "Izliyorum") renk = "bg-primary";
                    }
                    <span class="position-absolute top-0 end-0 badge m-2 @renk">
                        @item.Durum?.Ad
                    </span>
                </div>

                <div class="card-body p-2 text-center">
                    <h6 class="card-title fw-bold text-truncate mb-0">@item.Baslik</h6>

                    @if (!string.IsNullOrEmpty(item.Tur))
                    {
                        <small class="d-block text-warning text-truncate mb-1" style="font-size: 0.75rem;">
                            @item.Tur
                        </small>
                    }

                    <p class="card-text text-white-50 small mb-1">
                        @item.BaslangicYili | @item.SezonSayisi Sezon
                    </p>

                    <div class="text-warning small">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i < (item.KullaniciPuani ?? 0))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-3 pb-3 pt-0">
                    <a asp-action="Edit" asp-route-id="@item.DiziID" class="btn btn-outline-light btn-sm rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-pencil small"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.DiziID" class="btn btn-outline-info btn-sm rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-eye small"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.DiziID" class="btn btn-outline-danger btn-sm rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-trash small"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .dizi-karti {
        transition: transform 0.2s;
    }

        .dizi-karti:hover {
            transform: scale(1.03);
            z-index: 10;
        }
</style>