@model KulturAtlasi.Models.Paylasim

<div class="modal-header border-0 pb-0">
    <h5 class="modal-title fw-bold text-primary">
        <i class="bi bi-pencil-square me-2"></i>Düzenle
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <form id="paylasimDuzenleForm">
        <input type="hidden" name="PaylasimID" value="@Model.PaylasimID" />

        <div class="form-group">
            <label class="small text-muted fw-bold mb-2">Gönderi İçeriği</label>

            <textarea name="Icerik" class="form-control border-0 bg-light p-3 rounded-3 shadow-sm"
                      rows="5" style="resize: none;" required>@Model.Icerik</textarea>

            <div class="mt-3 p-2 bg-light rounded border border-light d-flex align-items-center">
                <i class="bi bi-info-circle text-muted me-2"></i>
                <small class="text-muted fst-italic">
                    @if (Model.IlgiliIcerikID != null)
                    {
                        <span>Bu paylaşım bir <strong>@Model.IlgiliIcerikTuru</strong> hakkında. Türü değiştiremezsin, sadece yazdığın yazıyı düzenleyebilirsin.</span>
                    }
                    else
                    {
                        <span>Bu bir düşünce paylaşımı. Metni dilediğin gibi düzenleyebilirsin.</span>
                    }
                </small>
            </div>
        </div>
    </form>
</div>

<div class="modal-footer border-0 pt-0 mt-2">
    <button type="button" class="btn btn-light rounded-pill fw-bold text-secondary" data-bs-dismiss="modal">Vazgeç</button>
    <button type="button" class="btn btn-success rounded-pill px-4 fw-bold" onclick="paylasimKaydet()">
        <i class="bi bi-check-lg me-2"></i> Güncelle
    </button>
</div>