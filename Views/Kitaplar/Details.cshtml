@model KulturAtlasi.Models.Kitap

@{
    ViewData["Title"] = Model.Baslik;
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var currentUserId = UserManager.GetUserId(User);
    bool benimPaylasimim = Model.KullaniciID == currentUserId;

   
    string durumMetni = "";
    if (Model.Durum != null)
    {
        durumMetni = Model.Durum.Ad;
    }
}
<div class="container py-5">

    <div class="card border-0 shadow-lg overflow-hidden" style="border-radius: 15px;">

        <div class="position-absolute w-100 h-100" style="
            background-image: url('@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://placehold.co/500x800" : Model.KapakResmiYolu)');
            background-size: cover;
            background-position: center;
            filter: blur(30px) opacity(0.3);
            z-index: 0;">
        </div>

        <div class="row g-0 position-relative" style="z-index: 1;">

            <div class="col-md-4 d-flex align-items-center justify-content-center p-5 bg-white bg-opacity-50">
                @if (!string.IsNullOrEmpty(Model.KapakResmiYolu))
                {
                    <img src="@Model.KapakResmiYolu" class="img-fluid rounded shadow-lg"
                         style="max-height: 450px; width: auto; border: 5px solid white;"
                         alt="@Model.Baslik"
                         onerror="this.src='https://placehold.co/300x450?text=Kapak+Yok'">
                }
                else
                {
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="width: 200px; height: 300px;">
                        <div class="text-center">
                            <i class="bi bi-book fs-1"></i>
                            <p>Kapak Yok</p>
                        </div>
                    </div>
                }
            </div>

            <div class="col-md-8 bg-white p-5">

                <div class="mb-4 border-bottom pb-3">
                    <h1 class="fw-bold text-dark display-6">@Model.Baslik</h1>
                    <h4 class="text-muted fw-light"><i class="bi bi-pen-fill small"></i> @Model.Yazar</h4>
                </div>

                <div class="d-flex flex-wrap gap-2 mb-4">

                    @{
                        var renk = "bg-secondary";
                        var ikon = "bi-circle";
                        if (Model.Durum?.Ad == "Okudum") { renk = "bg-success"; ikon = "bi-check-circle-fill"; }
                        if (Model.Durum?.Ad == "Okuyacağım") { renk = "bg-primary"; ikon = "bi-hourglass-split"; }
                        if (Model.Durum?.Ad == "Yarıda Bıraktım") { renk = "bg-danger"; ikon = "bi-x-circle-fill"; }
                    }
                    <span class="badge @renk fs-6 px-3 py-2 rounded-pill shadow-sm">
                        <i class="bi @ikon"></i> @Model.Durum?.Ad
                    </span>

                    @if (!string.IsNullOrEmpty(Model.Tur))
                    {
                        <span class="badge bg-warning text-dark fs-6 px-3 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-tags-fill"></i> @Model.Tur
                        </span>
                    }

                    @if (!string.IsNullOrEmpty(Model.ISBN))
                    {
                        <span class="badge bg-light text-dark border fs-6 px-3 py-2 rounded-pill">
                            <i class="bi bi-upc-scan"></i> ISBN: @Model.ISBN
                        </span>
                    }
                </div>

                <div class="mb-4 p-3 bg-light rounded border d-inline-block">
                    <div class="text-warning fs-4 lh-1">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= (Model.KullaniciPuani ?? 0))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-secondary text-opacity-25"></i>
                            }
                        }
                        <span class="ms-2 text-muted small fs-6 align-middle">(@(Model.KullaniciPuani ?? 0)/5)</span>
                    </div>
                </div>

                <div class="mb-5">
                    <h5 class="fw-bold text-dark mb-3"><i class="bi bi-card-text"></i> Özet / Notlarım</h5>
                    <p class="lead fs-6 text-secondary" style="line-height: 1.8; white-space: pre-line;">
                        @(string.IsNullOrEmpty(Model.Aciklama) ? "Bu kitap için henüz bir açıklama veya not girmedin." : Model.Aciklama)
                    </p>
                </div>

                <div class="d-flex gap-3 mt-auto pt-3 border-top">
                    <a asp-action="Edit" asp-route-id="@Model.KitapID" class="btn btn-warning fw-bold px-4 rounded-pill shadow-sm">
                        <i class="bi bi-pencil-square"></i> Düzenle
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                        <i class="bi bi-arrow-left"></i> Listeye Dön
                    </a>

                    <a asp-action="Delete" asp-route-id="@Model.KitapID" class="btn btn-outline-danger px-3 ms-auto rounded-circle" title="Sil">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
               
                <div class="mt-2">
                    @if (benimPaylasimim)
                    {
                        // Kendi kitabım. Duruma bakıyorum.
                        // Eğer "Okudum" veya "Okuyorum" statüsündeyse -> BENZERİNİ ÖNER
                        if (durumMetni == "Okudum" || durumMetni == "Okuyorum")
                        {
                            <button onclick="bunaBenzerOner('@Model.Baslik', 'Kitap')" class="btn btn-outline-success rounded-pill btn-sm shadow-sm animate-pulse-hover">
                                <i class="bi bi-compass"></i> Buna Benzer Ne Var?
                            </button>
                        }
                        else
                        {
                            // Listemde ama henüz "Okunacak" durumunda -> İKNA ET
                            <button onclick="banaBunuSat(@Model.KitapID, 'Kitap')" class="btn btn-outline-primary rounded-pill btn-sm shadow-sm animate-pulse-hover">
                                <i class="bi bi-gem"></i> Neden Okumalıyım?
                            </button>
                        }
                    }
                    else
                    {
                        // Başkasının kitabı -> İKNA ET
                        <button onclick="banaBunuSat(@Model.KitapID, 'Kitap')" class="btn btn-outline-primary rounded-pill btn-sm shadow-sm animate-pulse-hover">
                            <i class="bi bi-gem"></i> Neden Okumalıyım?
                        </button>
                    }
                </div>

                <div id="aiKutusu" class="alert border-0 shadow-sm mt-3" style="display: none; background-color: #f8f9fa;">
                    <div class="d-flex gap-3">
                        <div class="fs-1" id="aiIkon">🤖</div>
                        <div>
                            <h6 class="fw-bold mb-1" id="aiBaslik">Asistan Diyor ki:</h6>
                            <p class="mb-0 small" id="aiMetni">...</p>
                        </div>
                    </div>
                </div>
                
                <div class="text-end mt-2">
                    <small class="text-muted fst-italic" style="font-size: 0.75rem;">
                        Kütüphaneye eklenme: @Model.KayitTarihi.ToString("dd MMMM yyyy")
                    </small>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    // 1. FONKSİYON: İKNA ET (Bana Bunu Sat)
    function banaBunuSat(id, tur) {
        hazirlikYap('🧙‍♂️', 'alert-info'); // Büyücü ikonu, Mavi renk

        fetch('/Kesfet/BanaBunuSat?id=' + id + '&tur=' + tur)
            .then(res => res.json())
            .then(data => sonucGoster(data));
    }

    // 2. FONKSİYON: KEŞİF (Buna Benzer Öner)
    function bunaBenzerOner(baslik, tur) {
        hazirlikYap('🧭', 'alert-success'); // Pusula ikonu, Yeşil renk

        fetch('/Kesfet/BunaBenzerOner?ad=' + baslik + '&tur=' + tur)
            .then(res => res.json())
            .then(data => sonucGoster(data));
    }

    // --- ORTAK YARDIMCI FONKSİYONLAR ---

    function hazirlikYap(ikon, renkSinifi) {
        var kutu = document.getElementById('aiKutusu');
        var metin = document.getElementById('aiMetni');
        var aiIkon = document.getElementById('aiIkon');

        // Kutuyu sıfırla ve göster
        kutu.className = `alert ${renkSinifi} border-0 shadow-sm mt-3`;
        kutu.style.display = 'block';
        aiIkon.innerText = ikon;
        metin.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Yapay zeka düşünüyor...';
    }

    function sonucGoster(data) {
        var metin = document.getElementById('aiMetni');
        if(data.success) {
            metin.innerHTML = ""; // Temizle
            typeWriter(data.text, metin); // Yazdır
        } else {
            metin.innerHTML = "Bağlantı hatası.";
        }
    }

    // Daktilo Efekti
    function typeWriter(text, element, i = 0) {
        if (i < text.length) {
            // Satır başlarını <br> ile düzeltelim
            if(text.charAt(i) === '\n') {
                element.innerHTML += '<br>';
            } else {
                element.innerHTML += text.charAt(i);
            }
            setTimeout(() => typeWriter(text, element, i + 1), 20);
        }
    }
</script>

<style>
    .animate-pulse-hover:hover {
        animation: pulse 1s infinite;
    }
</style>