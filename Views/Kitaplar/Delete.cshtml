@model KulturAtlasi.Models.Kitap

@{
    ViewData["Title"] = "Kitabı Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg overflow-hidden text-center" style="border-radius: 20px;">

                <div class="card-header bg-danger text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Silme Onayı</h4>
                </div>

                <div class="card-body p-5 position-relative">

                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-light" style="opacity: 0.5; z-index: 0;"></div>

                    <div style="position: relative; z-index: 1;">

                        <div class="mb-4">
                            <img src="@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://placehold.co/300x450?text=Kapak+Yok" : Model.KapakResmiYolu)"
                                 class="img-fluid rounded shadow-lg border"
                                 style="max-height: 250px; width: auto;"
                                 alt="@Model.Baslik"
                                 onerror="this.src='https://placehold.co/300x450?text=Kapak+Yok'">
                        </div>

                        <h3 class="fw-bold text-dark mb-1">@Model.Baslik</h3>
                        <p class="text-muted fs-5 mb-3">@Model.Yazar</p>

                        <div class="alert alert-warning d-inline-block px-4 py-2 shadow-sm">
                            <i class="bi bi-info-circle"></i> Bu kitap kütüphanenden <strong>kalıcı olarak</strong> silinecek.
                        </div>

                        <form asp-action="Delete" class="mt-4 d-flex justify-content-center gap-3">
                            <input type="hidden" asp-for="KitapID" />

                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 rounded-pill fw-bold">
                                <i class="bi bi-x-lg"></i> Vazgeç
                            </a>

                            <button type="submit" class="btn btn-danger btn-lg px-5 rounded-pill fw-bold shadow-sm">
                                <i class="bi bi-trash-fill"></i> Evet, Sil
                            </button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>