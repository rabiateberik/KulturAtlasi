@model KulturAtlasi.Models.AnalizSonucu

@if (Model != null)
{
    <div class="modal-body text-center p-4">

        <div class="mb-4">
            <div class="position-relative d-inline-block mb-3">
                <img src="@Model.ProfilResmi"
                     class="rounded-circle shadow-lg border border-4 border-white animate-pulse"
                     style="width: 120px; height: 120px; object-fit: cover;">
            </div>
            <h6 class="text-uppercase text-muted small fw-bold ls-2">Kültür Karakterin</h6>

            <h2 class="fw-bold display-6"
                style="background: linear-gradient(45deg, #FF6B6B, #556270); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                @Model.Unvan
            </h2>
        </div>

        <div class="card border-0 bg-light rounded-4 p-4 mb-4 position-relative overflow-hidden">
            <i class="bi bi-quote position-absolute text-secondary opacity-25" style="font-size: 5rem; top: -20px; left: 10px;"></i>

            <p class="fs-5 text-secondary fst-italic mb-0 position-relative" style="z-index: 1;">
                @Model.Aciklama
            </p>
        </div>

        @if (!string.IsNullOrEmpty(Model.RuhIkizi) && Model.RuhIkizi != "Bilinmiyor")
        {
            <div class="d-flex align-items-center justify-content-center gap-2">
                <span class="text-muted small text-uppercase fw-bold">Ruh İkizin:</span>
                <span class="badge bg-primary bg-gradient rounded-pill px-3 py-2 fs-6 shadow-sm">
                    <i class="bi bi-person-hearts me-1"></i> @Model.RuhIkizi
                </span>
            </div>
        }
    </div>

    <div class="modal-footer border-0 justify-content-center pb-4">
        <button type="button" class="btn btn-outline-dark rounded-pill px-4" data-bs-dismiss="modal">Kapat</button>
        <button type="button" class="btn btn-primary rounded-pill px-4" onclick="analizPaylas()">
            <i class="bi bi-share-fill"></i> Sonucu Paylaş
        </button>
    </div>
}
else
{
    <div class="modal-body text-center p-5">
        <div class="mb-3 text-danger">
            <i class="bi bi-exclamation-circle display-1"></i>
        </div>
        <h4 class="fw-bold">Analiz Yapılamadı</h4>
        <p class="text-muted">Yapay zeka şu an biraz yoğun veya verilerine ulaşamadı. Lütfen biraz kitap/film ekleyip tekrar dene.</p>
    </div>
    <div class="modal-footer border-0 justify-content-center pb-4">
        <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Tamam</button>
    </div>
}

<style>
 
    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
        }
    }
</style>