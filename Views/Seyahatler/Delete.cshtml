@model KulturAtlasi.Models.Seyahat

@{
    ViewData["Title"] = "Rotayı Sil";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card border-0 shadow-lg overflow-hidden text-center position-relative" style="border-radius: 20px;">

                <div class="position-absolute w-100 h-100" style="
                    background-image: url('@(string.IsNullOrEmpty(Model.ResimYolu) ? "https://loremflickr.com/800/600/travel" : Model.ResimYolu)');
                    background-size: cover;
                    background-position: center;
                    filter: blur(15px) brightness(0.3);
                    z-index: 0;">
                </div>

                <div class="card-body p-5 position-relative text-white" style="z-index: 1;">

                    <h2 class="fw-bold mb-4 text-danger">
                        <i class="bi bi-exclamation-triangle-fill"></i> Bu Rotayı Siliyor musun?
                    </h2>

                    <div class="mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.ResimYolu) ? "https://loremflickr.com/800/600/travel" : Model.ResimYolu)"
                             class="img-fluid rounded shadow-lg border border-secondary"
                             style="max-height: 250px; width: auto;"
                             alt="@Model.Baslik">
                    </div>

                    <h3 class="fw-bold">@Model.Baslik</h3>

                    <div class="d-flex justify-content-center gap-2 mb-3">
                        <span class="badge bg-light text-dark">
                            <i class="bi bi-geo-alt-fill"></i> @Model.Sehir, @Model.Ulke
                        </span>
                        @if (!string.IsNullOrEmpty(Model.Tur))
                        {
                            <span class="badge bg-warning text-dark">@Model.Tur</span>
                        }
                    </div>

                    <div class="alert alert-danger bg-danger bg-opacity-25 border-danger text-white d-inline-block mt-2 px-4">
                        Bu işlem geri alınamaz! Anıların ve notların kalıcı olarak silinecek.
                    </div>

                    <form asp-action="Delete" class="mt-4 d-flex justify-content-center gap-3">
                        <input type="hidden" asp-for="SeyahatID" />

                        <a asp-action="Index" class="btn btn-outline-light btn-lg px-4 rounded-pill">
                            <i class="bi bi-x-lg"></i> Vazgeç
                        </a>

                        <button type="submit" class="btn btn-danger btn-lg px-5 rounded-pill fw-bold">
                            <i class="bi bi-trash-fill"></i> Evet, Sil
                        </button>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>