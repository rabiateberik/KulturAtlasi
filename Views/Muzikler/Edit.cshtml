@model KulturAtlasi.Models.Muzik

@{
    ViewData["Title"] = "Müziği Düzenle";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 overflow-hidden">
                <div class="card-header bg-info text-white py-3">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-square"></i> Düzenle: @Model.Baslik</h5>
                </div>

                <div class="card-body p-0">
                    <form asp-action="Edit">
                        <div class="row g-0">
                            <div class="col-md-4 bg-light d-flex align-items-center justify-content-center p-3 border-end">
                                <div class="text-center w-100">
                                    <h6 class="text-muted small mb-2">Albüm Kapağı</h6>
                                    <img id="kapakOnizleme"
                                         src="@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://via.placeholder.com/300x300?text=Kapak+Yok" : Model.KapakResmiYolu)"
                                         class="img-fluid rounded shadow-sm"
                                         style="max-height: 300px; object-fit: cover;"
                                         onerror="this.src='https://via.placeholder.com/300x300?text=Hata'">
                                </div>
                            </div>

                            <div class="col-md-8 p-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="MuzikID" />
                                <input type="hidden" asp-for="KayitTarihi" />
                                <input type="hidden" asp-for="KullaniciID" />

                                <div class="mb-3">
                                    <label asp-for="Baslik" class="form-label fw-bold">Şarkı / Albüm Adı</label>
                                    <input asp-for="Baslik" class="form-control" />
                                    <span asp-validation-for="Baslik" class="text-danger"></span>
                                </div>

                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Sanatci" class="form-label">Sanatçı</label>
                                        <input asp-for="Sanatci" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Album" class="form-label">Albüm</label>
                                        <input asp-for="Album" class="form-control" />
                                    </div>
                                </div>

                                <div class="row g-2 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="DurumID" class="form-label">Durumu</label>
                                        <select asp-for="DurumID" class="form-select" asp-items="ViewBag.DurumID"></select>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="KullaniciPuani" class="form-label">Puan (1-5)</label>
                                        <input asp-for="KullaniciPuani" type="number" min="1" max="5" class="form-control" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="KapakResmiYolu" class="form-label">Kapak Resmi Linki</label>
                                    <input asp-for="KapakResmiYolu" class="form-control" oninput="document.getElementById('kapakOnizleme').src = this.value" />
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Aciklama" class="form-label">Notlar</label>
                                    <textarea asp-for="Aciklama" class="form-control" rows="2"></textarea>
                                </div>

                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                                    <button type="submit" class="btn btn-info text-white fw-bold">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}