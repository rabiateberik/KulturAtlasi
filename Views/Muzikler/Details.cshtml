@model KulturAtlasi.Models.Muzik

@{
    ViewData["Title"] = Model.Baslik;
}
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@{
    var currentUserId = UserManager.GetUserId(User);
    bool benimPaylasimim = Model.KullaniciID == currentUserId;

    string durumMetni = "";
    if (Model.Durum != null)
    {
        durumMetni = Model.Durum.Ad;
    }
}

<div class="container py-5">
    <div class="card border-0 shadow-lg overflow-hidden bg-dark text-white" style="border-radius: 20px;">

        <div class="position-absolute w-100 h-100" style="
            background-image: url('@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://via.placeholder.com/500" : Model.KapakResmiYolu)');
            background-size: cover;
            background-position: center;
            filter: blur(30px) opacity(0.4);
            z-index: 0;">
        </div>

        <div class="row g-0 position-relative p-4 p-md-5" style="z-index: 1;">

            <div class="col-md-5 col-lg-4 text-center mb-4 mb-md-0">
                <img src="@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://via.placeholder.com/500" : Model.KapakResmiYolu)"
                     class="img-fluid shadow-lg rounded-4"
                     style="width: 100%; max-width: 350px; aspect-ratio: 1/1; object-fit: cover;">
            </div>

            <div class="col-md-7 col-lg-8 ps-md-5 d-flex flex-column justify-content-center">

                <div>
                    <span class="badge bg-info bg-opacity-25 text-info border border-info border-opacity-25 rounded-pill mb-2 px-3">@Model.Tur</span>
                    <h1 class="display-5 fw-bold mb-0">@Model.Baslik</h1>
                    <h3 class="text-white-50 fw-light mb-1">@Model.Sanatci</h3>
                    <div class="d-flex align-items-center gap-2 text-white-50 small">
                        <span>@Model.Album</span>
                        @if (Model.Yil != null)
                        {
                            <span>• @Model.Yil</span>
                        }
                    </div>

                    <div class="my-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= (Model.KullaniciPuani ?? 0))
                            {
                                <i class="bi bi-star-fill text-warning fs-5"></i>
                            }
                            else
                            {

                                <i class="bi bi-star text-secondary fs-5 opacity-25"></i>
                            }
                        }
                    </div>
                </div>

                <div class="bg-white bg-opacity-10 p-3 rounded-3 mb-4 border-start border-4 border-info">
                    <i class="bi bi-quote fs-4 text-white-50 d-block mb-1"></i>
                    <span class="fst-italic text-light">@(string.IsNullOrEmpty(Model.Aciklama) ? "Henüz bir not girilmemiş." : Model.Aciklama)</span>
                </div>

                <div class="mb-4">
                    @if (benimPaylasimim)
                    {
                        if (durumMetni == "Dinledim" || durumMetni == "Dinliyorum")
                        {
                            <button onclick="bunaBenzerOner('@Model.Baslik - @Model.Sanatci', 'Müzik')" class="btn btn-success bg-gradient border-0 rounded-pill px-4 py-2 shadow-sm animate-pulse-hover w-100 w-md-auto">
                                <i class="bi bi-music-note-list me-2"></i> Buna Benzer Ne Var?
                            </button>
                        }
                        else
                        {
                            <button onclick="banaBunuSat(@Model.MuzikID, 'Müzik')" class="btn btn-primary bg-gradient border-0 rounded-pill px-4 py-2 shadow-sm animate-pulse-hover w-100 w-md-auto">
                                <i class="bi bi-headphones me-2"></i> Neden Dinlemeliyim?
                            </button>
                        }
                    }
                    else
                    {
                        <button onclick="banaBunuSat(@Model.MuzikID, 'Müzik')" class="btn btn-primary bg-gradient border-0 rounded-pill px-4 py-2 shadow-sm animate-pulse-hover w-100 w-md-auto">
                            <i class="bi bi-headphones me-2"></i> Neden Dinlemeliyim?
                        </button>
                    }

                    <div id="aiKutusu" class="alert border-0 shadow-sm mt-3 text-dark" style="display: none; background-color: #f8f9fa;">
                        <div class="d-flex gap-3 align-items-start">
                            <div class="fs-1 lh-1" id="aiIkon">🎵</div>
                            <div>
                                <h6 class="fw-bold mb-1 text-primary" id="aiBaslik">Müzik Gurusu Diyor ki:</h6>
                                <p class="mb-0 small" id="aiMetni">...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-wrap align-items-center justify-content-between gap-3 mt-auto pt-3 border-top border-white border-opacity-10">

                    <div class="d-flex gap-2">
                        <a asp-action="Index" class="btn btn-outline-light btn-sm rounded-pill px-3">
                            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.MuzikID" class="btn btn-outline-info btn-sm rounded-pill px-3">
                            <i class="bi bi-pencil me-1"></i> Düzenle
                        </a>
                    </div>

                    <div>
                        <a asp-action="Delete" asp-route-id="@Model.MuzikID" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                            <i class="bi bi-trash me-1"></i> Sil
                        </a>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<script>
    function banaBunuSat(id, tur) {
        hazirlikYap('🎧', 'alert-info');
        fetch('/Kesfet/BanaBunuSat?id=' + id + '&tur=' + tur)
            .then(res => res.json())
            .then(data => sonucGoster(data));
    }

    function bunaBenzerOner(baslik, tur) {
        hazirlikYap('🎹', 'alert-success');
        fetch('/Kesfet/BunaBenzerOner?ad=' + baslik + '&tur=' + tur)
            .then(res => res.json())
            .then(data => sonucGoster(data));
    }

    function hazirlikYap(ikon, renk) {
        var kutu = document.getElementById('aiKutusu');
        var metin = document.getElementById('aiMetni');
        var aiIkon = document.getElementById('aiIkon');

        kutu.className = `alert ${renk} border-0 shadow-sm mt-3 text-dark`;
        kutu.style.display = 'block';
        aiIkon.innerText = ikon;
        metin.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Ritimler analiz ediliyor...';
    }

    function sonucGoster(data) {
        var metin = document.getElementById('aiMetni');
        if(data.success) {
            metin.innerHTML = "";
            typeWriter(data.text, metin);
        } else {
            metin.innerHTML = "Bağlantı hatası.";
        }
    }

    function typeWriter(text, element, i = 0) {
        if (i < text.length) {
            if(text.charAt(i) === '\n') element.innerHTML += '<br>';
            else element.innerHTML += text.charAt(i);
            setTimeout(() => typeWriter(text, element, i + 1), 20);
        }
    }
</script>

<style>
    .animate-pulse-hover:hover {
        animation: pulse 1s infinite;
    }
</style>