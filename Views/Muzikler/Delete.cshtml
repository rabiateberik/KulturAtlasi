@model KulturAtlasi.Models.Muzik
@{
    ViewData["Title"] = "Sil";
}

<div class="container py-5 text-center">
    <div class="card shadow border-0 d-inline-block p-5" style="max-width: 600px; border-radius: 20px;">
        <h2 class="text-danger fw-bold mb-4"><i class="bi bi-trash3-fill"></i> Silmek İstiyor musun?</h2>

        <img src="@(string.IsNullOrEmpty(Model.KapakResmiYolu) ? "https://via.placeholder.com/200" : Model.KapakResmiYolu)"
             class="rounded shadow mb-4" style="width: 150px; height: 150px; object-fit: cover;">

        <h4>@Model.Baslik</h4>
        <p class="text-muted">@Model.Sanatci</p>

        <div class="alert alert-warning small">
            Bu işlem geri alınamaz. Müzik kütüphanenden kalıcı olarak silinecek.
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="MuzikID" />
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Vazgeç</a>
            <button type="submit" class="btn btn-danger rounded-pill px-4 fw-bold">Evet, Sil</button>
        </form>
    </div>
</div>