@model IEnumerable<KulturAtlasi.Models.Iletisim>

@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0"><i class="bi bi-inbox-fill text-primary"></i> Gelen Kutusu</h3>
            <p class="text-muted small">Kullanıcılardan gelen iletişim formları.</p>
        </div>

        @{
            var okunmamis = Model.Count(x => !x.OkunduMu);
        }
        @if (okunmamis > 0)
        {
            <span class="badge bg-danger rounded-pill px-3 py-2">
                @okunmamis Yeni Mesaj
            </span>
        }
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Mesaj"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Durum</th>
                        <th>Gönderen</th>
                        <th>Konu & Mesaj</th>
                        <th>Tarih</th>
                        <th class="text-end pe-4">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Okunmamışsa satırı koyu yap
                        <tr class="@(!item.OkunduMu ? "bg-light fw-bold" : "")">

                            <td class="ps-4">
                                @if (!item.OkunduMu)
                                {
                                    <form asp-action="MesajOkunduIsaretle" method="post">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-light text-primary border rounded-circle" title="Okundu İşaretle">
                                            <i class="bi bi-circle-fill"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <i class="bi bi-check2-all text-muted fs-5" title="Okundu"></i>
                                }
                            </td>

                            <td>
                                <div class="d-flex flex-column">
                                    <span>@item.AdSoyad</span>
                                    <small class="text-muted fw-normal">@item.Email</small>
                                </div>
                            </td>

                            <td style="max-width: 400px; cursor: pointer;" data-bs-toggle="modal" data-bs-target="#mesajModal-@item.Id">
                                <div class="text-truncate text-primary">@item.Konu</div>
                                <small class="text-muted text-truncate d-block fw-normal">@item.Mesaj</small>
                            </td>

                            <td>
                                <small class="text-muted fw-normal">@item.Tarih.ToString("dd.MM.yyyy HH:mm")</small>
                            </td>

                            <td class="text-end pe-4">
                                <form asp-action="MesajSil" method="post" onsubmit="return confirm('Mesajı silmek istiyor musun?');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger shadow-sm">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <div class="modal fade" id="mesajModal-@item.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content border-0 shadow">
                                    <div class="modal-header">
                                        <h5 class="modal-title fw-bold">@item.Konu</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="mb-3 border-bottom pb-2">
                                            <strong>Kimden:</strong> @item.AdSoyad (@item.Email) <br />
                                            <small class="text-muted">@item.Tarih.ToString("f")</small>
                                        </div>
                                        <p class="text-dark">@item.Mesaj</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="mailto:@item.Email" class="btn btn-primary btn-sm">
                                            <i class="bi bi-reply-fill"></i> Cevapla (Email)
                                        </a>
                                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">
                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                Gelen kutusu boş.
            </div>
        }
    </div>
</div>