@model KulturAtlasi.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark"><i class="bi bi-shield-lock-fill text-danger"></i> Yönetim Paneli</h2>
            <p class="text-muted">Sistem genelindeki istatistikler ve son hareketler.</p>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark shadow-sm rounded-pill px-4">
            <i class="bi bi-box-arrow-up-right me-2"></i> Siteyi Görüntüle
        </a>
    </div>
    
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="Uyeler" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 border-start border-4 border-primary hover-scale">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted small fw-bold">Toplam Üye</h6>
                                <h2 class="fw-bold mb-0 text-primary">@Model.ToplamUye</h2>
                            </div>
                            <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                                <i class="bi bi-people-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="KitapYonetimi" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 border-start border-4 border-success hover-scale">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted small fw-bold">Toplam Kitap</h6>
                                <h2 class="fw-bold mb-0 text-success">@Model.ToplamKitap</h2>
                            </div>
                            <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                                <i class="bi bi-book-half fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="FilmYonetimi" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 border-start border-4 border-warning hover-scale">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted small fw-bold">Toplam Film</h6>
                                <h2 class="fw-bold mb-0 text-warning">@Model.ToplamFilm</h2>
                            </div>
                            <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                                <i class="bi bi-film fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a asp-controller="Admin" asp-action="GelenKutusu" class="text-decoration-none">
                <div class="card border-0 shadow-sm h-100 border-start border-4 border-info hover-scale">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-uppercase text-muted small fw-bold">Mesajlar</h6>
                                <h2 class="fw-bold mb-0 text-info">@ViewBag.OkunmamisMesajSayisi</h2>
                            </div>
                            <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                                <i class="bi bi-envelope-paper-fill fs-4"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white py-3 border-0">
                    <h6 class="mb-0 fw-bold text-secondary"><i class="bi bi-graph-up-arrow text-primary me-2"></i> Üye Katılım Grafiği (Son 6 Ay)</h6>
                </div>
                <div class="card-body">
                    <canvas id="uyeGrafigi" style="max-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h5 class="fw-bold m-0"><i class="bi bi-person-plus-fill text-primary me-2"></i> Siteye Katılan Son 5 Üye</h5>
            <a asp-action="Uyeler" class="btn btn-sm btn-light border">Tümünü Gör</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Kullanıcı</th>
                        <th>Email</th>
                        <th>Durum</th>
                        <th class="text-end pe-4">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SonUyeler != null && Model.SonUyeler.Any())
                    {
                        @foreach (var user in Model.SonUyeler)
                        {
                            var isBanned = user.LockoutEnd != null && user.LockoutEnd > DateTimeOffset.UtcNow;
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width:40px; height:40px; font-weight:bold;">
                                            @user.Email?.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@(user.Ad ?? "Kullanıcı") @(user.Soyad ?? "")</div>
                                            <small class="text-muted">@user.UserName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @if (isBanned)
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger rounded-pill px-3">Yasaklı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success rounded-pill px-3">Aktif</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    @if (user.Email != User.Identity.Name)
                                    {
                                        <div class="dropdown">
                                            <button class="btn btn-light btn-sm border shadow-sm" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                <i class="bi bi-three-dots-vertical"></i>
                                            </button>

                                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2">
                                                @if (isBanned)
                                                {
                                                    <li class="dropdown-header small text-uppercase fw-bold text-success border-bottom mb-1">Yasak Yönetimi</li>
                                                    <li>
                                                        <form asp-action="KullaniciBanKaldir" method="post">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="dropdown-item rounded-2 text-success fw-bold">
                                                                <i class="bi bi-unlock-fill me-2"></i> Yasağı Kaldır
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="dropdown-header small text-uppercase fw-bold text-muted border-bottom mb-1">Yasaklama Ayarları</li>
                                                    <li>
                                                        <form asp-action="KullaniciBanla" method="post">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="sure" value="3Ay" class="dropdown-item rounded-2 text-warning">
                                                                <i class="bi bi-clock-history me-2"></i> 3 Ay Yasakla
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form asp-action="KullaniciBanla" method="post">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="sure" value="6Ay" class="dropdown-item rounded-2 text-warning">
                                                                <i class="bi bi-clock-history me-2"></i> 6 Ay Yasakla
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form asp-action="KullaniciBanla" method="post" onsubmit="return confirm('Emin misin?');">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="sure" value="Tamamen" class="dropdown-item rounded-2 text-danger fw-bold">
                                                                <i class="bi bi-person-x-fill me-2"></i> Sınırsız Yasakla
                                                            </button>
                                                        </form>
                                                    </li>
                                                }
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form asp-action="UyeSil" method="post" onsubmit="return confirm('Kullanıcı tamamen silinecek!');">
                                                        <input type="hidden" name="id" value="@user.Id" />
                                                        <button type="submit" class="dropdown-item rounded-2 text-muted">
                                                            <i class="bi bi-trash3 me-2 text-danger"></i> Hesabı Sil
                                                        </button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic pe-2">Siz</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var aylar = @Html.Raw(Json.Serialize(ViewBag.Aylar));
        var sayilar = @Html.Raw(Json.Serialize(ViewBag.KayitSayilari));

        var ctx = document.getElementById('uyeGrafigi').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: aylar,
                datasets: [{
                    label: 'Yeni Üye',
                    data: sayilar,
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    borderColor: 'rgba(13, 110, 253, 1)',
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true,
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { borderDash: [5, 5] } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>

    <style>
        .hover-scale {
            transition: transform 0.2s;
        }

            .hover-scale:hover {
                transform: translateY(-5px);
                cursor: pointer;
            }
    </style>
}