@model IEnumerable<KulturAtlasi.Models.Film>

@{
    ViewData["Title"] = "Film Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-0"><i class="bi bi-film text-warning"></i> Film Arşivi</h3>
            <p class="text-muted small">Kullanıcıların eklediği filmleri yönet.</p>
        </div>
        <a href="/Filmler/Create" class="btn btn-warning rounded-pill shadow-sm fw-bold">
            <i class="bi bi-plus-lg"></i> Yeni Film
        </a>
    </div>

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Mesaj"]
        </div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm">
            <i class="bi bi-exclamation-circle-fill me-2"></i> @TempData["Hata"]
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Afiş</th>
                        <th>Film / Yönetmen</th>
                        <th>Ekleyen</th>
                        <th>Yıl</th>
                        <th class="text-end pe-4">Yönet</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4" width="80">
                                <div class="img-guvenlik">
                                    <img src="@(string.IsNullOrEmpty(item.PosterYolu) ? "https://via.placeholder.com/50x75" : item.PosterYolu)" class="rounded shadow-sm">
                                </div>
                            </td>

                            <td>
                                <div class="fw-bold text-dark">@item.Baslik</div>
                                <div class="text-muted small">@item.Yonetmen</div>
                            </td>

                            <td>
                                @if (item.Kullanici != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary bg-opacity-10 text-secondary rounded-circle d-flex align-items-center justify-content-center me-2" style="width:30px; height:30px; font-weight:bold; font-size:12px;">
                                            @item.Kullanici.UserName?.Substring(0, 1).ToUpper()
                                        </div>
                                        <span class="small fw-bold">@item.Kullanici.UserName</span>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Anonim</span>
                                }
                            </td>

                            <td>
                                <span class="badge bg-warning bg-opacity-25 text-dark border border-warning">@item.Yil</span>
                            </td>

                            <td class="text-end pe-4">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="/Filmler/Details/@item.FilmID" target="_blank" class="btn btn-sm btn-light border" title="Sitede Gör">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <form asp-action="FilmSilAdmin" asp-route-id="@item.FilmID" method="post" onsubmit="return confirm('Bu filmi silersen, ekleyen kişinin profilinden de KALICI olarak silinecek. Emin misin?');">
                                        <button type="submit" class="btn btn-sm btn-danger text-white shadow-sm px-3">
                                            <i class="bi bi-trash-fill"></i> SİL
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (ViewBag.TotalPages > 1)
        {
            <div class="d-flex justify-content-center py-4 border-top">
                <nav aria-label="Sayfalama">
                    <ul class="pagination pagination-sm m-0">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link border-0 text-secondary" asp-action="FilmYonetimi" asp-route-page="@(ViewBag.CurrentPage - 1)"><i class="bi bi-chevron-left"></i></a>
                        </li>
                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link border-0 rounded-circle mx-1 @(ViewBag.CurrentPage == i ? "bg-warning text-dark shadow fw-bold" : "text-secondary")" asp-action="FilmYonetimi" asp-route-page="@i">@i</a>
                            </li>
                        }
                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link border-0 text-secondary" asp-action="FilmYonetimi" asp-route-page="@(ViewBag.CurrentPage + 1)"><i class="bi bi-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="text-center py-5 text-muted">Henüz film eklenmemiş.</div>
        }
    </div>
</div>

<style>
    .img-guvenlik img {
        width: 50px;
        height: 75px;
        object-fit: cover;
        
        transition: all 0.3s;
        cursor: pointer;
    }

        .img-guvenlik img:hover {
            filter: blur(0);
            opacity: 1;
            transform: scale(1.1);
        }
</style>